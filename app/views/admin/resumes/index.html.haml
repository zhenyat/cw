%h1= t Resume.model_name.human(count: 2)
%table.table.table-hover.table-striped
  %thead
    %tr
      %th= Resume.human_attribute_name(:name)
      %th= Resume.human_attribute_name(:attachment)
      %th= t 'actions.actions'

  %tbody
    - @resumes.each do |resume|
      %tr
        %td= resume.name
        %td= link_to "Download Resume", resume.attachment_url
        %td= link_to t('actions.delete'), [:admin, resume], class: 'btn btn-danger  btn-xs', method: :delete, data: {confirm: t('messages.confirm')}
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_resume_path, class: 'btn btn-primary btn-block'
