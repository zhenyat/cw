%h1= t Account.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Account.human_attribute_name(:name)
      %th= Account.human_attribute_name(:avatar)
      %th= Account.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.name
        %td= image_tag account.avatar.thumb.url if account.avatar?
        %td= account.position
        %td= status_mark account.status
        %td= render 'admin/shared/index_buttons', resource: account
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_account_path, class: 'btn btn-primary btn-block'
