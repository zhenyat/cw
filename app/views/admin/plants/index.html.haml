%h1= t Plant.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Plant.human_attribute_name(:name)
      %th= Plant.human_attribute_name(:title)
      %th= Plant.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @plants.each do |plant|
      %tr
        %td= plant.name
        %td= plant.title
        %td= plant.position
        %td= status_mark plant.status
        %td= render 'admin/shared/index_buttons', resource: plant
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_plant_path, class: 'btn btn-primary btn-block'
