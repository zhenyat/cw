%h1= t Gallery.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Gallery.human_attribute_name(:name)
      %th= Gallery.human_attribute_name(:title)
      %th= Gallery.human_attribute_name(:images)
      %th= Gallery.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @galleries.each do |gallery|
      %tr
        %td= gallery.name
        %td= gallery.title
        %td
          - gallery.images.each do |image|
            = image_tag(image.thumb.url)
        %td= gallery.position
        %td= status_mark gallery.status
        %td= render 'admin/shared/index_buttons', resource: gallery
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_gallery_path, class: 'btn btn-primary btn-block'
